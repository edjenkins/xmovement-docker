ssc.eventmovement.co.uk {

	root /var/www/ssc/public
	tls ssc@eventmovement.co.uk

	fastcgi / php-fpm:9000 php {
		index index.php
	}

	rewrite {
		if {path} not_has /wss
		r .*
		ext /
		to /index.php?{query}
	}

	log /var/log/caddy/access.log
	errors /var/log/caddy/error.log
}

