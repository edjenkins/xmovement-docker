// XMStyles

.modal
	.modal-dialog
		max-width 500px
		.modal-content
			border-radius 6px
			border none
			-webkit-box-shadow none
			box-shadow none
			.modal-header
				text-align center
				padding 20px
			.modal-body
				padding 20px
				text-align center
			.modal-footer
				border-top none
				padding 20px
				text-align center
	&.wide-modal
		.modal-dialog
			max-width 600px
	&.video-modal
		.modal-dialog
			background-color white
			padding 15px
			max-width 800px
			width 800px
			@media(max-width:800px)
				max-width 100%
				margin 15px
				padding 15px
				width auto

// Support modal
.modal
	.g-recaptcha
		display inline-block
	.g-recaptcha > div > div
		margin 0 auto
	.nav-tabs
		border none
		display inline-block
		margin 0 auto
		text-align center
		li
			display inline-block
			a
				border none
				font-size 1.3em
				&:hover
					background none
					border none
					color darken(main-color, 20%)
					cursor pointer
			&.active a
				font-weight bold
				&:hover
					color #666
	.tab-content
		margin-top 10px

// Supporters modal

ul.modal-list.supporters-list
	cleanlist()
	li.supporter-list-item
		cleanlist()
		line-height 50px
		padding 0 50px 0 50px
		position relative
		a
			display block
			text-decoration none
			.user-profile-arrow
				color #999
				line-height 50px
				position absolute
				right 5px
				top 0px
				animate()
			.user-avatar
				background-color border-color
				background-position center
				background-size cover
				background-repeat no-repeat
				border-radius 50%
				height 40px
				width 40px
				position absolute
				left 0px
				top 5px
			.user-name
				border-bottom border-color 1px solid
				color #444
				text-align left
				animate()
			&:last-child
				.user-name
					border-bottom none
			&:hover
				cursor pointer
				.user-name, .user-profile-arrow
					color main-color
				.user-profile-arrow
					right 0px
