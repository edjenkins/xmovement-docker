// XMStyles

#fileinput-button
	background white
	border #ccc 2px solid
	color #999
	margin 10px 0
	position relative
	overflow hidden
	&:hover
		background-color main-color
		border-color main-color
		color white
		cursor pointer

#fileinput-button input
	position absolute
	top 0px
	right 0px
	left 0px
	bottom 0px
	margin 0
	opacity 0
	-ms-filter 'alpha(opacity=0)'
	direction ltr
	cursor pointer
