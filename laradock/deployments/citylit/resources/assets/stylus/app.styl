*
	outline 0

body
	background white
	font-family 'Lato'
	min-width 320px
	padding-top $navbar-height
	min-width 320px

body.transparent
	padding-top 0

body.grey
	background very-light-grey

body.medium-grey
	background medium-grey
	background #f2f2f2

[ng-cloak], [data-ng-cloak], [x-ng-cloak], .ng-cloak, .x-ng-cloak
	display none !important

.container
	container-fixed()
	@media (min-width $screen-sm-min)
		width 100%
	@media (min-width $screen-md-min)
		width 100%
	@media (min-width $screen-lg-min)
		width $container-lg

.visuallyhidden
	display none

a
	color main-color
	&:hover
		color darken(main-color, 10%)
		cursor pointer

p, h1, h2, h3, h4, h5
	color dark-font-color

.clearfloat
	clearfloat()

textarea
	border none
	border #e1e1e1 1px solid
	border-radius 6px
	font-size 16px
	margin 0 auto
	max-width 100%
	padding 15px
	outline 0
	width 600px

.text-muted
	color #CCC

.muted-link
	color #CCC
	margin 10px 10px 0 10px
	&:hover
		color main-color
		cursor pointer
		text-decoration underline

.error-list
	list-style none
	margin 0
	padding 0
	li
		color red
		margin 0
		padding 0

.nav-tabs
	border-color border-color

.nav-tabs > li.active > a, .nav-tabs > li.active > a:hover, .nav-tabs > li.active > a:focus
	border-color border-color
	border-bottom-color transparent

.text-linethru
	padding 10px
	width 100%
	.line
		background-color #ddd
		height 1px
		width 100%
	.text
		background white
		color #bbb
		display inline-block
		font-size 16px
		height 20px
		line-height 15px
		padding 0 10px
		position relative
		top -10px

.text-container
	text-align center
	h1
		color white
		font-weight 300
		margin 0 auto 30px auto
		max-width 500px
	button
		background transparent
		border white 2px solid
		border-radius 0px
		color white
		font-size 20px
		font-weight normal
		margin 0 auto
		outline 0
		padding 8px 26px
		text-align center
		animate()
		&:hover
			background-color white
			color dark-font-color

.panel-heading
	h2
		margin 40px 0 10px 0

body.colorful
	background-color main-color
	.page-header
		border none
		h2
			color white

// Errors
.error-page
	.logo-container
		text-align center
		img
			height 50px
			margin 0 auto
	.text-container
		text-align center
		h1
			color white
			font-size 42px
			font-weight 300
			margin-bottom 20px
		h3
			color white
			font-weight 300
			margin-bottom 20px
		a
			color white
			display block
			font-weight 300
			padding 10px
			i
				font-size 22px

.action-panel
	border border-color 2px dashed
	border-radius 10px
	color #CCC
	display block
	font-size 24px
	margin 20px
	padding 60px 40px
	text-align center
	transition(all 0.2s linear)
	&:hover
		border-color darken(border-color, 10%)
		color darken(#CCC, 10%)
		text-decoration none

.loader, .loader:before, .loader:after
	border-radius 50%
	width 2.5em
	height 2.5em
	-webkit-animation-fill-mode both
	animation-fill-mode both
	-webkit-animation load7 1.8s infinite ease-in-out
	animation load7 1.8s infinite ease-in-out

.loader
	color main-color
	font-size 10px
	margin 80px auto
	position relative
	text-indent -9999em
	-webkit-transform translateZ(0)
	-ms-transform translateZ(0)
	transform translateZ(0)
	-webkit-animation-delay -0.16s
	animation-delay -0.16s
	&:before, &:after
		content ''
		position absolute
		top 0
	&:before
		left -3.5em
		-webkit-animation-delay -0.32s
		animation-delay -0.32s
	&:after
		left 3.5em

@-webkit-keyframes load7 {
	0%, 80%, 100% { box-shadow: 0 2.5em 0 -1.3em; }
	40% { box-shadow: 0 2.5em 0 0; }
}

@keyframes load7 {
	0%, 80%, 100% { box-shadow: 0 2.5em 0 -1.3em; }
	40% { box-shadow: 0 2.5em 0 0; }
}

.shortlisted-banner
	background main-color
	border-bottom-left-radius 4px
	border-bottom-right-radius 4px
	color white
	font-size 13px
	font-weight normal
	line-height 26px
	padding 0 8px
	position absolute
	right 8px
	top 0px
	.shortlisted-text
		display none
	&:hover
		cursor pointer
		color white
		text-decoration none
		.shortlisted-text
			display inline-block

@-webkit-keyframes load3 {
  0% {
    -webkit-transform: rotate(0deg);
    transform: rotate(0deg);
  }
  100% {
    -webkit-transform: rotate(360deg);
    transform: rotate(360deg);
  }
}
@keyframes load3 {
  0% {
    -webkit-transform: rotate(0deg);
    transform: rotate(0deg);
  }
  100% {
    -webkit-transform: rotate(360deg);
    transform: rotate(360deg);
  }
}


.floating-page-row
	position relative
	margin-top -30px

.floating-page-tile
	margin 0 auto
	padding 40px
	text-align left
	white-panel()
	img
		height 60px
		margin-bottom 15px
	h3, p
		margin 0
		padding 0
	h3
		color dark-font-color
		margin 0 0 10px 0
		&#privacy
			padding-top 120px
	p, li
		color #777
		font-size 1.1em
		margin 20px 0

.video-container
	margin 0 auto
	position relative
	padding-bottom 47.5%
	padding-top 30px
	height 0
	overflow hidden
	iframe, object, embed
		position absolute
		top 0
		left 0
		width 100%
		height 100%
