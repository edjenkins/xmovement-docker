#isotopeContainer
	padding 0 !important

.grid-sizer
	width 30%

.tile.inspiration-tile
	box-sizing border-box
	margin 30px 15px 0px 15px
	padding-bottom 44px
	width calc((100% - 91px) / 3)//width calc((100% - 120px) / 4)
	white-panel()
	&:hover
		cursor pointer
	@media(max-width: 1120px)
		width calc((100% - 91px) / 3)
	@media(max-width: 987px)
		margin 15px 15px 0px 15px
		width calc((100% - 61px) / 2)
	@media(max-width: 568px)
		width calc(100% - 31px)

	.inspiration-categories
		left 0
		position absolute
		top 0
		ul
			cleanlist()
			li
				cleanlist()
				background-color rgba(0, 0, 0, 0.2)
				border-radius 4px
				color white
				display inline-block
				font-size 12.5px
				line-height 26px
				margin 5px 0 0 5px
				padding 0 6px
				animate()
	&:hover .inspiration-categories ul li
		background-color main-color
	.photo-tile-image
		background-position center
		background-repeat no-repeat
		background-size cover
		height 0
		padding-bottom 40%
		width 100%
	.video-tile-image
		border-bottom border-color 1px solid
		background-position center
		background-repeat no-repeat
		background-size cover
		display block
		height 0
		padding-bottom 50%
		position relative
		i.fa.fa-play
			color white
			font-size 28px
			left 50%
			line-height 50px
			margin-left -25px
			margin-top -25px
			position absolute
			text-align center
			top 50%
			width 50px
	.file-tile-icon, .link-tile-icon
		border-bottom border-color 1px solid
		text-align center
		i
			color #999
			font-size 24px
			line-height 80px
	.inner-container
		overflow hidden
		padding 15px 15px 0px 15px
		p.inspiration-description
			color #999
			margin 0
			padding 0
			word-wrap break-all
	.inspiration-tile-footer
		background white
		bottom 0
		left 15px
		min-height 44px
		position absolute
		right 15px
		text-align left
		p.inspiration-author
			color #CCC
			font-size 14px
			line-height 44px
			margin 0
			padding 0
			word-wrap break-all
			a
				color #CCC
		p.inspiration-favourties
			color #CCC
			font-size 14px
			line-height 44px
			margin 0
			padding 0
			position absolute
			right 0
			top 0
			i
				margin-left 4px

			&.favourited
				color #d5c243
				&:hover
					color darken(#d5c243, 10%)
