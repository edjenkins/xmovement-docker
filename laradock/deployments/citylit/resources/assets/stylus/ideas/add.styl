// XMStyles

.idea-form
	background white
	margin 40px auto
	text-align center
	.form-page
		display none
		animation-duration 0.3s
		&.visible
			display block
		.form-page-header
			border-bottom #eee 1px solid
			background main-color
			color white
			padding 10px 20px
			h2
				margin 0
				padding 0
		.form-page-content
			padding 20px

			.form-group
				margin-bottom 40px
				label
					color #999
					font-size 15px
					font-weight normal
					margin-bottom 20px
				textarea
					border none
					border border-color 1px solid
					border-radius 6px
					box-shadow none
					font-size 18px
					margin 0 auto
					max-width 100%
					padding 20px
					outline 0
					width 600px
				#pre-populated-design-tasks
					.expanding-wrapper
						margin-bottom 20px
			.cc-container
				#cc-search-field-wrapper
					border-radius 6px
					overflow hidden
				#cc-search-field
					font-size 16px
					padding  20px
				#cc-search-button
					position absolute
					margin 0
					padding 22px
					right 0px
					top 0px

	&.has-errors .step-button
		display none

.idea-form
	.dropzone-container
		border border-color 1px solid
		border-top none




// Slider
.slider-wrapper
	margin-bottom 80px
	.slider
		&.ui-slider
			border-radius 20px
		    background main-color
		    border none
		    height 10px
		    margin 1em 1em 4em
		.ui-slider-pips
			color black
			font-weight normal
		.ui-slider-tip
			background main-color
			border none
			color white
			line-height 30px
			padding 0 10px
			height 30px
			top -40px !important
			&:before
				border-top-color transparent
				border-width 8px
			&:after
				border-top-color main-color
				border-width 8px
				bottom -15px
				margin-left -8px

		.ui-slider-handle
			background white
			cursor pointer
			outline 0
			border-radius 23px
			height 23px
			width 23px
			top -7px
			margin-left -11px
			border 2px solid main-color
		.ui-slider-pip
			top 3px
			.ui-slider-label
				color #999
				top 20px
				font-weight normal
			.ui-slider-line
				height 6px
				top 20px
				display none
		.ui-slider-pip-first
			color red
			.ui-slider-label
				color #999
				font-weight normal
		.ui-slider-pip-last
			.ui-slider-label
				color #999
				font-weight normal
		.ui-slider-pip-selected-initial
			color red
			font-weight normal


	#slider .ui-slider-pip.ui-slider-pip-selected, #slider .ui-slider-pip.ui-slider-pip-selected-initial
		color main-color
