// XMStyles

.tile.idea-tile
	display block
	height 400px
	margin 15px auto
	max-width 360px
	position relative
	rounded-corners()
	white-panel()
	transition(all linear 0.2s)
	.tile-image
		border-bottom border-color 1px solid
		background-position center
		background-repeat no-repeat
		background-size cover
		display block
		height 0
		padding-bottom 60%
	.inner-container
		overflow hidden
		padding 10px 20px
		a.idea-name
			color #555
			font-size 18px
			margin 0
			padding 5px 0
			word-wrap break-word
		p.idea-author
			color #CCC
			font-size 14px
			margin 0
			padding 0
			word-wrap break-word
			a
				color #CCC
		p.idea-description
			color #999
			padding 5px 0
			word-wrap break-word
	.tile-footer
		background white
		border-top border-color 1px solid
		bottom 0
		min-height 50px
		position absolute
		text-align center
		width 100%
		.phase-progress
			background-color rgba(0, 0, 0, 0.05)
			background-color main-color
			position absolute
			height 1px
			top -1px
			// bottom 0
			left 0
			right 30%
		p
			color #aaa
			line-height 50px
			margin 0
			padding 0 20px

.mini-tile
	border transparent 1px solid
	border-radius 4px
	display block
	margin 0 0 10px 0
	padding 0 0 0 50px
	max-width 360px
	overflow hidden
	position relative
	animate()
	.tile-image
		border-bottom border-color 1px solid
		background-position center
		background-repeat no-repeat
		background-size cover
		border-radius 4px
		display inline-block
		position absolute
		top 0
		left 0
		height 40px
		width 52px
	.inner-container
		h4
			color #666
			font-size 16px
			font-weight normal
			line-height 40px
			margin 0
			padding 0 10px
			white-space nowrap
			.fa
				margin-right 6px
	&:hover
		border border-color 1px solid
		cursor pointer
